<div class="row justify-content-center">
  <h1>
    Star Wars Species
  </h1>
</div>
<div class="row justify-content-center">
  <% @species.each do |species| %>
    <div class="card m-3 col-10 col-md-3 col-lg-2">
      <div>
        <h2><%= link_to species.name, species_path(species) %></h2>
      </div>
    </div>
  <% end %>
</div>
